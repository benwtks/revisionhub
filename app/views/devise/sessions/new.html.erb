<% @title = "Sign in" %>
<% @devise_page = true %>

<div class="form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login, required: false, autofocus: true, placeholder: "Username or email", label: false %>
      <%= f.input :password, required: false, placeholder: "Password", label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in" %>
    </div>
  <% end %>
</div>
<div class="links">
  <a class="link-wrapper left" href="<%= new_student_registration_path %>">
    <p>Sign up</p>
  </a>
  <a class="link-wrapper right" href="<%= new_password_path(resource_name) %>">
    <p>Forgot your password?</p>
  </a>
</div>
