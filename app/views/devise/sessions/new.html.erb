<% @title = "Log in" %>
<% @devise_page = true %>

<div class="form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login, required: false, autofocus: true, placeholder: "Username or email address", label: false %>
      <%= f.input :password, required: false, placeholder: "Password", label: false %>
      <div class="checkbox">
        <%= f.input :remember_me, class: "check_boxes", as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
</div>
<div class="links">
  <a class="link-wrapper left" href="<%= new_student_registration_path %>">
    <p>Sign up</p>
  </a>
  <a class="link-wrapper right" href="<%= new_password_path(resource_name) %>">
    <p>Forgot your password?</p>
  </a>
</div>
