= simple_form_for [@subject, @topic] do |f|
  = f.input :name, label: false, placeholder: "Topic name"
  = f.input :description, label: false, placeholder: "Description of the topic"
  = f.label :TopicTags, "Topic tags"
  = f.association :topicTags, label: false, as: :check_boxes, collection: @topic_tags
  = f.button :submit
