= simple_form_for [@subject, @grade] do |f|
  .form-divider
    = f.input :grade
    = f.input :percentage
  .form-divider
    = f.label :date, class: "inline"
    = f.date_select :date, as: :date,
      discard_year: true,
      order: [:day, :month],
      label: false
  .form-divider
    = f.label :topic_id, class: "inline"
    = f.collection_select(:topic_id, @topics, :id, :name, include_blank: "No topic")
  .form-divider
    = f.label :colour, class: "inline"
    = f.collection_select(:colour, @colours, :to_s, :to_s)
  = f.button :submit
